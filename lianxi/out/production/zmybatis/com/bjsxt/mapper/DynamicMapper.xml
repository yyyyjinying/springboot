	<select id="selByDynamic" parameterType="list" resultType="People">
		select * from people where id in
		<foreach collection="list" item="val" open="(" close=")" separator=",">
			#{val}
		</foreach>
	</select>

	<insert id="ins" parameterType="list">
		insert into people values
		<trim suffixOverrides=",">
			<foreach collection="list" item="val">
				(default,#{val},2),
			</foreach>
		</trim>

	</insert>

	<select id="sels" resultType="People">
		select <include refid="names"></include>
		from people

	</select>

	<sql id="names">
		id,age
	</sql>


</mapper>